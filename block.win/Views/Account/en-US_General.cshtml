            animation-duration: .75s;
        }

    .rotateShou {
        animation-name: rotateShou;
    }

    @@keyframes rotateShou {
        from {
            transform-origin: center;
        }

        to {
            transform-origin: center;
            transform: rotate3d(0, 0, 1, 180deg);
        }
    }

    .rotateOpen {
        animation-name: rotateOpen;
